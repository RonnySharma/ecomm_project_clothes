@model Project_EComm_App_1035.Model.Category
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Category" : "New Category";
    var saveUpdate = Model.Id != 0 ? "Update" : "Save";
}
<form method="post">
    <div class="row container rounded border">
        <div class="col-10">
            <h2 class="text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row m-2 p-2">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
           @* <div class="form-group p-2 m-2">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-info form-control">
                        @saveUpdate
                    </button>
                </div>
            </div>*@
            <div class="form-group row m-2 p-2">
                <div class="col-8 offset-4">
                    @if(Model.Id!=0)
                    {
                            <partial name="_EditAndBackToListButton"></partial>
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton"></partial>
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial"></partial>
}