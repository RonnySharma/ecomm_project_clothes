@model ecomm_project_clothes.Model.Category
@{
    ViewData["Title"] = "Upsert";
    var title = Model.id != 0 ? "Edit Category" : "New Category";
    var saveupdate = Model.id != 0 ? "Update" : "Save";
}
<form method="post">
    <div class="row border-bottom">
        <div class="col-10 ">
            <h2 class="text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly"
             class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row m-2 p-2">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-8 offset-4">
                  @if(Model.id!=0)
                    {
                        <partial name="_EditandBacktolist"/>
                    }
                    else
                    {
                        <partial name="_Createandbacktolist"/>
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts
    {
    <partial name="_ValidationScriptsPartial" />
}

