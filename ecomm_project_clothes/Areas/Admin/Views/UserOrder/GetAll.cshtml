@model List<ShoppingCartVM>

<h1>Users and Cart Items</h1>

@foreach (var cartViewModel in Model)
{
    <div class="user-container">
        <div class="user-box">
            <h2>User Information</h2>
            <p>User Name: @cartViewModel.User.UserName</p>
            <!-- Display other user information as needed -->
            <button class="btn btn-primary" onclick="location.href='@Url.Action("UserDetails", "UserOrder", new { userId = cartViewModel.User.Id })'">View Details</button>

            @*<button class="btn btn-primary" onclick="viewDetails('@cartViewModel.User.Id')">View Details</button>*@
        </div>

        <div class="cart-items-box">
            <h2>Cart Items</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        
                        <!-- Add more columns if needed -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in cartViewModel.ListCart)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Count</td>
                            <td>@item.Product.Price</td>
                           
                            <!-- Add more columns if needed -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@section Scripts
    {
    <script>
        function viewDetails(userId) {
            // Implement your logic to view user details here
            // You can use JavaScript/jQuery to open a modal or navigate to another page
            // based on the userId.
            // For example, you can use AJAX to fetch additional user details and display them.
        }
    </script>
}
