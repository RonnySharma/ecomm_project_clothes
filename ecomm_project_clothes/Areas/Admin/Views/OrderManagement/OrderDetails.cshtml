@model ecomm_project_clothes.Model.ViewModels.OrderDetailsViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Order Details</title>
</head>
<body>
    <h1>Order Details</h1>

    @if (Model != null)
    {
        if (Model.Order != null)
        {
            <h2>Order Information</h2>
            <p>Order ID: @Model.Order.Id</p>
            <p>Customer Name:@Model.Order.Name</p>
            <p>Order Date: @Model.Order.OrderDate</p>
            <!-- Add other order properties as needed -->
        }
        else
        {
            <p>Order data is null.</p>
        }

        if (Model.OrderDetails != null && Model.OrderDetails.Any())
        {
            <h2>Order Items</h2>
            <table>
                <thead>
                    <tr>
                      @*  <th>Product Name</th>*@
                        <th>Quantity</th>
                        <th>Price</th>
                        <!-- Add other table headers as needed -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderDetail in Model.OrderDetails)
                    {
                        <tr>
                           
                            
                            @*<td>@orderDetail.Product.Name</td>*@
                            <td>@orderDetail.Count</td>
                            <td>@orderDetail.Price.ToString("0.00")</td>
                            <!-- Add other table cells as needed -->
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No order items available.</p>
        }
    }
    else
    {
        <p>Model is null.</p>
    }

    <a asp-action="Index">Back to Orders</a>
</body>
</html>
