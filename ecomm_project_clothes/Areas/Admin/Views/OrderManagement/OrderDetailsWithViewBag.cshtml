@model ecomm_project_clothes.Model.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details with ViewBag";
}

<!DOCTYPE html>
<html>
<head>
    <title>Order Details</title>
</head>
<body>
    <h1>Order Details</h1>

    @if (ViewBag.Order != null)
    {
        <h2>Order Information</h2>
        <p>Order ID: @ViewBag.Order.Id</p>
        <p>Order Date: @ViewBag.Order.OrderDate</p>
        <!-- Add other order properties as needed -->
    }
    else
    {
        <p>Order data is null.</p>
    }

    @if (ViewBag.OrderDetails != null && ViewBag.OrderDetails.Count > 0)
    {
        <h2>Order Items</h2>
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <!-- Add other table headers as needed -->
                </tr>
            </thead>
            <tbody>
                @foreach (var orderDetail in ViewBag.OrderDetails)
                {
                    <tr>
                        <td>@orderDetail.ProductName</td>

                        <td>@orderDetail.Count</td>
                        <td>@orderDetail.Price.ToString("0.00")</td>
                        <!-- Add other table cells as needed -->
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No order items available.</p>
    }

    <a asp-action="Index">Back to Orders</a>
</body>
</html>
