@model ecomm_project_clothes.Model.OrderDetails

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Add any additional CSS or custom stylesheets here -->
</head>
<body>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h2 class="text-center">
                            Order Details for @Model.OrderHeader.Name
                        </h2>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Order Information</h4>
                        <table class="table">
                            <tr>
                                <th>Customer Name:</th>
                                <td>@Model.OrderHeader.ApplicationUser.Name</td>
                            </tr>
                            <tr>
                                <th>Total Amount:</th>
                                <td>@Model.OrderHeader.OrderTotal</td>
                            </tr>
                            <tr>
                                <th>Order Status:</th>
                                <td>@Model.OrderHeader.OrderStatus</td>
                            </tr>
                            <tr>
                                <th>Date & Time:</th>
                                <td>@Model.OrderHeader.OrderDate</td>
                            </tr>
                            <tr>
                                <th>Transaction Id:</th>
                                <td>@Model.OrderHeader.TransationId</td>
                            </tr>
                        </table>

                        <hr>

                        <h4 class="card-title">Product Details</h4>
                        <table class="table">
                            <tr>
                                <th>Title:</th>
                                <td>@Model.Product.Name</td>
                            </tr>
                            <tr>
                                <th>Brand:</th>
                                <td>@Model.Product.Brand.Name</td>
                            </tr>
                            <tr>
                                <th>Category:</th>
                                <td>@Model.Product.Category.Name</td>
                            </tr>
                            <tr>
                                <th>Count:</th>
                                <td>@Model.Product.ListPrice</td>
                            </tr>
                        </table>

                        <hr>

                        <h4 class="card-title">User's Details</h4>
                        <table class="table">
                            <tr>
                                <th>Name:</th>
                                <td>@Model.OrderHeader.ApplicationUser.Name</td>
                            </tr>
                            <tr>
                                <th>Email Address:</th>
                                <td>@Model.OrderHeader.ApplicationUser.Email</td>
                            </tr>
                            <tr>
                                <th>Contact Number:</th>
                                <td>@Model.OrderHeader.ApplicationUser.PhoneNumber</td>
                            </tr>
                            <tr>
                                <th>Street Address:</th>
                                <td>@Model.OrderHeader.ApplicationUser.StreetAddress</td>
                            </tr>
                            <tr>
                                <th>City:</th>
                                <td>@Model.OrderHeader.ApplicationUser.City</td>
                            </tr>
                            <tr>
                                <th>State:</th>
                                <td>@Model.OrderHeader.ApplicationUser.State</td>
                            </tr>
                            <tr>
                                <th>Postal Code:</th>
                                <td>@Model.OrderHeader.ApplicationUser.PostalCode</td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Index" class="btn btn-primary">Back To All The Orders</a>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-area="Admin" asp-action="CancelOrder" class="btn btn-primary">Cancel Orders</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap and any additional scripts here -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Add any additional JavaScript or custom scripts here -->

</body>
</html>
